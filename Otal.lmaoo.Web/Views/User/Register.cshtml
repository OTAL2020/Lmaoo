@model RegisterViewModel

<link rel="stylesheet" href="~/css/register.css" />
<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
 <div class = "container">
    <div class="columns is-vcentered">
         <div class="column">
            <img id="otal_logo" src="~/img//otal_light.png">
         </div>
         <div class="column">
            <div class="card-body">
                <h2 class="register-header" id="sign_up" >
                    Sign up
                </h2>
                <form method='post' asp-action="Register">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Forename" placeholder="First name" autofocus>
                        <span asp-validation-for="Forename"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Surname" placeholder="Last name">
                        <span asp-validation-for="Surname"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Username" placeholder="Username">
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="has-text-centered">
                        <button id="register_button" type="submit" class="btn btn-success btn-bloc">Register</button> 
                    </div>       
                    <div class="form-group">
                        <a class="register" id="already_registered" asp-action="Login">Already Registered? Login here!</a>
                    </div>
                </form>
              </div>
         </div>
      </div>
      </div>   
</main>

@section scripts
{
    <script src="~/js/register.js"></script>
}